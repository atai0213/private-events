<h1>Events</h1>

<ul>
  <% @events.each do |event| %>
    <li>
      <%= link_to event.title, event %>
    </li>
  <% end %>
</ul>

<% if user_signed_in? %>
  <%= current_user.email %>
  <%= session[:user_id]%>
  <%= link_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: "false" }%>
<% else %>
 <%= link_to "Log in", new_user_session_path, data: { turbo: "false" }  %>
<% end %>

<p><%= link_to "New Event", new_event_path%></p>

