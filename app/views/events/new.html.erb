<div>New Event</div>

<div data-turbo="false">
  <%= form_with model: Event do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% @event.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description %><br>
      <% @event.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
    <%= @event.errors.messages %>
    </div>

    <div>
      <%= form.label :location %><br>
      <%= form.text_area :location %><br>
      <% @event.errors.full_messages_for(:location).each do |message| %>
        <div><%= message %></div>
      <% end %>
    <%= @event.errors.messages %>
    </div>

    <div>
      <%= form.label :date %><br>
      <%= form.date_field :date %><br>
      <% @event.errors.full_messages_for(:date).each do |message| %>
        <div><%= message %></div>
      <% end %>
    <%= @event.errors.messages %>
    </div>




    <div>
      <%= form.submit "Submit" %>
    </div>
  <% end %>
</div>